{
  "url": {
    "label": "Instance URL",
    "type": "String",
    "required": true,
    "help": "Your ServiceNow Instance URL.",
    "maxLength": 50,
    "format": {
      "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
    }
  },
  "username": {
	"label": "Username",
	"type": "String",
	"required": true,
	"help": "Your ServiceNow Instance Username.",
    "maxLength": 50
  },
  "password": {
	"label": "Password",
	"type": "Password",
	"required": true,
	"help": "Your ServiceNow Instace Password."
  },
  "deviceTableName": {
    "label": "Device Table Name",
    "type": "String",
    "required": true,
    "help": "Your ServiceNow table name for devices.",
    "maxLength": 50
  },
  "dataTableName": {
    "label": "Data Table Name",
    "type": "String",
    "required": true,
    "help": "Your ServiceNow table name for data.",
    "maxLength": 50
  },
  "idField": {
    "label": "Id Field (Optional)",
    "type": "String",
    "required": false,
    "help": "The field in your input data which will be the Record ID in ServiceNow Data Table.",
    "maxLength": 50
  }
}